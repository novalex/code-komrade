{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules":{
		"indent": [ 1, "tab", {
			"SwitchCase": 1
		} ],
		"no-tabs": 0,
		"semi": 0,
		"comma-dangle": "off",
		"space-before-function-paren": 0,
		"space-in-parens": 0,
		"key-spacing": 0,
		"space-unary-ops": 0,
		"react/jsx-indent": 0,
		"react/jsx-indent-props": 0,
		"react/jsx-curly-spacing": 0
	},
	"globals": {
		"React": false
	},
	"extends": [ "standard", "standard-jsx" ],
	"plugins": [ "react" ]
}